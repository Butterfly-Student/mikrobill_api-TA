@baseUrl = http://localhost:8000

### ========================================
### SUPERADMIN LOGIN
### ========================================
# @name loginSuperAdmin
POST {{baseUrl}}/v1/auth/login
Content-Type: application/json

{
  "username": "superadmin@mikrobill.com",
  "password": "password123"
}

### ========================================
### Get token for subsequent requests
### ========================================
@accessToken = {{loginSuperAdmin.response.body.data.access_token}}
@refreshToken = {{loginSuperAdmin.response.body.data.refresh_token}}

### ========================================
### Get Profile (Use access token from login)
### ========================================
GET {{baseUrl}}/v1/auth/profile
Authorization: Bearer {{accessToken}}

### ========================================
### Refresh Access Token
### ========================================
# @name refreshToken
POST {{baseUrl}}/v1/auth/refresh
Content-Type: application/json

{
  "refresh_token": "{{refreshToken}}"
}

### ========================================
### Logout
### ========================================
POST {{baseUrl}}/v1/auth/logout
Content-Type: application/json
Authorization: Bearer {{accessToken}}

{
  "refresh_token": "{{refreshToken}}"
}

